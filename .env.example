# ReactiQuiz Environment Variables
# Copy this file to .env and fill in the values for local development.

# Turso Database Credentials
TURSO_DATABASE_URL="libsql://your-db-name-username.turso.io"
TURSO_AUTH_TOKEN="your-long-auth-token"

# JWT Secret for User Authentication
# Use a long, random, and secure string. You can generate one from a password manager.
JWT_SECRET="your_super_secret_jwt_string_here"

# Google Gemini API Key
GEMINI_API_KEY="your_gemini_api_key_here"

# Nodemailer (for Contact Form) - Optional
# These are only needed if you want the contact form to work locally.
# Use an "App Password" from your Google account for EMAIL_PASS.
EMAIL_USER="your.gmail.address@gmail.com"
EMAIL_PASS="your_google_app_password"